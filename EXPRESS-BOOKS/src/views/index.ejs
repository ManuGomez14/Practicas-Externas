<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Noticias</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Noticias</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/new-entry/">Nueva Noticia</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Noticias</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container p-4">
        <div class="row">
            <% noticias.forEach(function (noticia) { %>
                <div class="card">
                    <div class="card-header">
                       Id: <%= noticia.id %>
                    </div>
                    <div class="card-body">
                       Título: <%= noticia.titulo %>
                    </div>
                    <div class="card-body">
                        Fecha: <%= noticia.fecha %>
                    </div>
                    <div class="card-body">
                        Texto: <%= noticia.texto %>
                    </div>
                    <div class="card-body">
                        Audiencia: <%= noticia.audiencia %>
                    </div>
                    <div class="card-body">
                        Usuarios: <%= noticia.usuarios %>
                    </div>
                    <div class="card-body">
                        Menciones: <%= noticia.menciones %>
                    </div>
                    <div class="card-body">
                        Ámbito de propagación: <%= noticia.ambito %>
                    </div>
                    <div class="card-body">
                        Temática: <%= noticia.tematica %>
                    </div>
                    <div class="card-body">
                        Formato: <%= noticia.formato %>
                    </div>
                    <div class="card-body">
                        Autor: <%= noticia.autor %>
                    </div>
                    <div class="card-body">
                        Municipio: <%= noticia.municipio %>
                    </div>
                    <div class="card-body">
                        Imagen: <img src="<%= noticia.imagen %>" class="card-img-top">
                    </div>
                    <div class="card-body">
                        ID vínculo: <%= noticia.id_vinculo %>
                        Tipo vínculo: <%= noticia.tipo_vinculo %>
                    </div>
                    <div class="card-body">
                        Agencia: <%= noticia.agencia %>
                    </div>
                    
                    <div class="card-footer">
                        <a href="/delete/<%= noticia.id %>" class="btn btn-danger">
                            Delete
                        </a>
                    </div>
                </div>
            <% }) %>  
        </div>
    </div>
</body>
</html>