<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nueva Noticia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Noticias</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/new-entry/">Nueva Noticia</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Noticias</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container p-4">
        <form method="POST" action="/new-entry" class="card card-body">
            <div class="form-group">
                <label for="id">ID:</label>
                <input type="text" class="form-control" name="id" id="id" placeholder="Introduce el ID de la noticia"
                    autofocus required>
            </div>
            <br>
            <div class="form-group">
                <label for="fecha">Fecha:</label>
                <input type="datetime-local" class="form-control" name="fecha" id="fecha" required>
            </div>
            <br>
            <div class="form-group">
                <label for="titulo">Título:</label>
                <input type="text" class="form-control" name="titulo" id="titulo"
                    placeholder="Introduce el título de la noticia" required>
            </div>
            <br>
            <div class="form-group">
                <label for="texto">Texto:</label>
                <textarea name="texto" id="texto" rows="2" class="form-control"
                    placeholder="Introduce el texto de la noticia" required></textarea>
            </div>
            <br>
            <div class="form-group">
                <label for="audiencia">Audiencia:</label>
                <input type="number" class="form-control" name="audiencia" id="audiencia"
                    placeholder="Introduce el Nº total de audiencia" required>
            </div>
            <br>
            <div class="form-group">
                <label for="usuarios">Usuarios:</label>
                <input type="number" class="form-control" name="usuarios" id="usuarios"
                    placeholder="Introduce el Nº total de usuarios" required>
            </div>
            <br>
            <div class="form-group">
                <label for="menciones">Menciones:</label>
                <input type="number" class="form-control" name="menciones" id="menciones"
                    placeholder="Introduce el Nº total de menciones" required>
            </div>
            <br>
            <div class="form-group">
                <label for="ambito">Ámbito de propagación:</label>
                <input type="text" class="form-control" name="ambito" id="ambito"
                    placeholder="Introduce el ámbito de propagación de la noticia" required>
            </div>
            <br>
            <div class="form-group">
                <label for="tematica">Temática:</label>
                <select name="tematica" id="tematica" class="form-control" required>
                    <option value="id_tem1">Temática 1</option>
                    <option value="id_tem2">Temática 2</option>
                    <option value="id_tem3">Temática 3</option>
                </select>
            </div>
            <br>
            <div class="form-group">
                <label for="formato">Formato:</label>
                <select name="formato" id="formato" class="form-control" required>
                    <option value="id_frmt1">Formato 1</option>
                    <option value="id_frmt2">Formato 2</option>
                    <option value="id_frmt3">Formato 3</option>
                </select>
            </div>
            <br>
            <div class="form-group">
                <label for="autor">Autor:</label>
                <input type="text" class="form-control" name="autor" id="autor"
                    placeholder="Introduce el autor de la noticia" required>
            </div>
            <br>
            <div class="form-group">
                <label for="municipio">Municipio:</label>
                <input type="text" class="form-control" name="municipio" id="municipio"
                    placeholder="Introduce el municipio de la noticia" required>
            </div>
            <br>
            <div class="form-group">
                <label for="imagen">Imagen:</label>
                <input type="text" class="form-control" name="imagen" id="imagen"
                    placeholder="Introduce la URL de la imagen" required>
            </div>
            <br>
            <label for="">Vínculo:</label>
            <div class="form-group card card-body">
                <label for="id_vinculo">Id del vínculo:</label>
                <input type="text" class="form-control" name="id_vinculo" id="id_vinculo"
                    placeholder="Introduce el ID del vínculo" required>
                <br>
                <label for="tipo_vinculo">Tipo del vínculo:</label>
                <select name="tipo_vinculo" id="tipo_vinculo" class="form-control" required>
                    <option value="tipo_vinc1">Tipo 1</option>
                    <option value="tipo_vinc2">Tipo 2</option>
                    <option value="tipo_vinc3">Tipo 3</option>
                </select>
            </div>
            <br>
            <div>
                <ol>
                    <% var setVar=0; var rowNo=0; 
                    function hola(){ 
                        var hola=document.getElementById("hola");
                        hola.innerHTML="Hola mundo" ; 
                    } %>
                </ol>
            </div>
            <div class="form-group">
                <label for="agencia">Agencia:</label>
                <select name="agencia" id="agencia" class="form-control" required onchange="hola()">
                    <option value="id_agnc1">Agencia 1</option>
                    <option value="id_agnc2">Agencia 2</option>
                    <option value="id_agnc3">Agencia 3</option>
                </select>
            </div>
            <br>
            <input type="submit" value="Registrar noticia" class="btn btn-primary">
        </form>
    </div>

    <div id="hola"></div>
</body>

</html>